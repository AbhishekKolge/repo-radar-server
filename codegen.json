{
  "overwrite": true,
  "schema": ["./src/modules/book/schema.graphql", "./src/modules/user/schema.graphql"],
  "documents": null,
  "generates": {
    "src/graphql/types.ts": {
      "plugins": ["typescript", "typescript-resolvers", "typescript-operations"],
      "config": {
        "contextType": "../types/graphql#ResolverContext",
        "mappers": {
          "Company": "../modules/book/types#CompanyEntity",
          "Job": "../modules/user/types#JobEntity"
        },
        "skipTypename": true
      }
    }
  },
  "watchers": {
    "src/**/*": {
      "run": "graphql-codegen"
    }
  }
}