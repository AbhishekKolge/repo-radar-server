{
  "overwrite": true,
  "schema": "${process.env.GRAPHQL_URL}",
  "documents": "src/**/*.graphql",
  "generates": {
    "src/generated/graphql.ts": {
      "plugins": ["typescript", "typescript-resolvers", "typescript-operations"]
    }
  },
  "watchers": {
    "src/graphql/**/*": {
      "run": "graphql-codegen"
    }
  }
}
