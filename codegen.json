{
  "overwrite": true,
  "schema": ["./src/domain/modules/user/schema.graphql"],
  "documents": null,
  "generates": {
    "src/domain/graphql/types.ts": {
      "plugins": ["typescript", "typescript-resolvers", "typescript-operations"],
      "config": {
        "contextType": "../shared/types/graphql#ResolverContext",
        "mappers": {
          "User": "../modules/user/types/entity#UserEntity"
        },
        "skipTypename": true
      }
    }
  },
  "watchers": {
    "src/**/*": {
      "run": "graphql-codegen"
    }
  }
}