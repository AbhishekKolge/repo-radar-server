{
  "name": "repo-radar-server",
  "version": "1.0.0",
  "description": "The backend of RepoRadar, a GraphQL-powered API for tracking GitHub repository activity. Built with Node.js, Apollo Server, and PostgreSQL, it fetches data from the GitHub API, stores repository information, and synchronizes updates for the client.",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "concurrently \"nodemon -r tsx src/index.ts\" \"graphql-codegen --config codegen.json --watch\"",
    "codegen": "graphql-codegen --config codegen.json",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "seed-country": "tsx src/seed/country.ts",
    "seed": "pnpm run seed-country"
  },
  "author": "Abhishek Kolge",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-resolvers": "^4.4.1",
    "@tsconfig/node18": "^18.2.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/joi-phone-number": "^5.0.8",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.1",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/validator": "^13.12.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "lint-staged": "^15.2.11",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.2",
    "prisma": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "@prisma/client": "^6.0.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dataloader": "^2.2.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.4.1",
    "graphql": "^16.9.0",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "joi-password": "^4.2.0",
    "joi-phone-number": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.16",
    "otp-generator": "^4.0.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "graphql,ts",
    "exec": "tsx",
    "ignore": [
      "src/**/*.spec.ts",
      "dist/**/*"
    ],
    "delay": "1000"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}